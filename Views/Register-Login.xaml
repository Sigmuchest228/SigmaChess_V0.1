<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SigmaChess.Views.Register_Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register Page">

    <Grid>
        <!-- Центрируем всё содержимое -->
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="20"
            Spacing="15">

            <!-- Ошибка / сообщение -->
            <Label
                Text="{Binding tempError}"
                TextColor="Red"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                Text="{Binding ErrorMessage}"
                TextColor="Red"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <!-- Поле: Регистрация -->
            <Entry
                Placeholder="Username"
                Text="{Binding UserInput}"
                WidthRequest="250"
                VerticalOptions="Center" />

            <!-- Поле: Email -->
            <Entry
                Placeholder="Email"
                Text="{Binding EmailInput}"
                Keyboard="Email"
                WidthRequest="250"
                VerticalOptions="Center" />

            <!-- Поле: Пароль -->
            <Entry
                Placeholder="Password"
                Text="{Binding PasswordInput}"
                IsPassword="True"
                WidthRequest="250"
                VerticalOptions="Center" />

            <!-- Поле: Подтверждение пароля -->
            <Entry
                Placeholder="Submit password"
                Text="{Binding PassConfirmInput}"
                IsPassword="True"
                WidthRequest="250"
                VerticalOptions="Center" />

            <!-- Основные кнопки -->
            <HorizontalStackLayout
                Spacing="20"
                HorizontalOptions="Center"
                Margin="0,20,0,0">
                <Button
                    Text="Register"
                    Command="{Binding GotoAnotherPageCommand}"
                    WidthRequest="160" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
