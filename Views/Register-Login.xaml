<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SigmaChess.Views.Register_Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register Page">

    <Grid>
        <!-- Центрируем всё содержимое -->
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="20"
            Spacing="15">

            <!-- Ошибка / сообщение -->
            <Label
                Text="{Binding ErrorMessage}"
                TextColor="Red"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <!-- Поле: Регистрация -->
            <HorizontalStackLayout Spacing="10">
                <Entry
                    Placeholder="Username"
                    Text="{Binding UserInput}"
                    WidthRequest="250"
                    VerticalOptions="Center" />
                <Button
                    Text="Очистить"
                    Command="{Binding ResetCommand}"
                    WidthRequest="100"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Поле: Email -->
            <HorizontalStackLayout Spacing="10">
                <Entry
                    Placeholder="Email"
                    Text="{Binding EmailInput}"
                    Keyboard="Email"
                    WidthRequest="250"
                    VerticalOptions="Center" />
                <Button
                    Text="Очистить"
                    Command="{Binding ResetCommand}"
                    WidthRequest="100"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Поле: Пароль -->
            <HorizontalStackLayout Spacing="10">
                <Entry
                    Placeholder="Password"
                    Text="{Binding PasswordInput}"
                    IsPassword="True"
                    WidthRequest="250"
                    VerticalOptions="Center" />
                <Button
                    Text="Очистить"
                    Command="{Binding ResetCommand}"
                    WidthRequest="100"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Поле: Подтверждение пароля -->
            <HorizontalStackLayout Spacing="10">
                <Entry
                    Placeholder="Submit password"
                    Text="{Binding PassSubmit}"
                    IsPassword="True"
                    WidthRequest="250"
                    VerticalOptions="Center" />
                <Button
                    Text="Очистить"
                    Command="{Binding ResetCommand}"
                    WidthRequest="100"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Основные кнопки -->
            <HorizontalStackLayout
                Spacing="20"
                HorizontalOptions="Center"
                Margin="0,20,0,0">
                <Button
                    Text="Register"
                    Command="{Binding RegisterCommand}"
                    WidthRequest="160" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
