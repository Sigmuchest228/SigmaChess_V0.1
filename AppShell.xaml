<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SigmaChess.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SigmaChess.Views"
    FlyoutBehavior="Disabled"
    Title="SigmaChess">
    
    <FlyoutItem Title="Register" Icon="dotnet_bot.png">
        <ShellContent
            Title="RegisterPage"
            ContentTemplate="{DataTemplate local:Register_Login}"    
            Route="Register_Login" />

        <ShellContent
            Title="LoginPage"
            ContentTemplate="{DataTemplate local:Login_Register}"
            Route="Login_Register" />
        <ShellContent
            Title="Friends list"
            ContentTemplate="{DataTemplate local:ListPage}"
            Route="ListPage" />
    </FlyoutItem>
</Shell>
